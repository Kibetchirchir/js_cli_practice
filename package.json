{
  "name": "new-nodejs-app",
  "version": "1.0.0",
  "description": "NodeJs/Ts REST API",
  "main": ".dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev-start": "ts-node ./src/index.ts",
    "dev": "nodemon -e ts -w ./src -x npm run dev-start",
    "build-dev": "tsc && npm start",
    "build": "rm -rf dist && tsc cp -r ./src/templates ./dist/templates",
    "lint": "tsc --noEmit && eslint 'src/*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src/"
    ],
    "exec": "npm run dev",
    "ext": "ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged"
    }
  },
  "keywords": [
    "NodeJS/TS",
    "create-nodejs-app"
  ],
  "author": "Manzi",
  "license": "ISC",
  "dependencies": {
    "@octokit/auth-basic": "^1.4.1",
    "@octokit/rest": "^17.0.0",
    "chalk": "^3.0.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "configstore": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "figlet": "^1.3.0",
    "inquirer": "^7.0.4",
    "lodash": "^4.17.19",
    "minimist": "^1.2.0",
    "simple-git": "^1.131.0",
    "touch": "^3.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "@types/clear": "^0.1.0",
    "@types/clui": "^0.3.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1"
  }
}
